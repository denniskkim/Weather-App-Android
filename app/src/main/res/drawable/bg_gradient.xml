<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
<!--
    this is to create a gradient. where you create a start color and an
    end color which will create the gradient from those two colors.
    the angle is to determine the angle of the gradient. so it can start
    from left to right, right to left... depending on the gradient.
-->
    <gradient
        android:startColor="#f9d34c"
        android:endColor="#f25019"
        android:angle="270"
        android:type="linear"/>


</shape>